;Telnet接続を利用してAlpine Linuxの起動を判定・待機するマクロ

;環境変数を展開して設定を反映
expandenv host "localhost:%QEMU_SERIAL_PORT% /nossh /T=1"

;Telnet接続
connect host

if result <> 2 then 
    ;Telnet接続に失敗した、つまりそもそもQemuが起動していないので異常終了
    setexitcode -1
    end
endif

;ターミナル非表示
showtt -1

;ログイン済みの場合、なぜか一度エンターを送らないとプロンプトが表示されないようなので送信
sendln ""

;ログインプロンプトまたはコマンドプロンプトの表示を待つ
wait "localhost login:" "localhost:~#"

;切断
disconnect 0

;正常終了
setexitcode 0

end