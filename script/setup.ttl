expandenv host "localhost:%QEMU_SERIAL_PORT% /nossh /T=1"
expandenv shellscript "%SCRIPTDIR%\setup.sh"

pause 10

connect host

wait "localhost login:"

sendln "root"

wait "localhost:~#"

fileopen fh shellscript 0

sendln "cat << EOF > setup.sh"

while 1
    filereadln fh buf
    if result=1 then
        break
    endif
    sendln buf
endwhile

sendln "EOF"

fileclose fh

wait "localhost:~#"

sendln "sh setup.sh"

wait "localhost:~#"

sendln "poweroff"

waitevent 4